<%= image_tag "#{@picture.image_url}" %>
<h1><%= @picture.title %></h1>
<ul>
  <% @picture.tags.map do |tag| %>
  <li>#<%= tag.name %> </li>
  <% end %>
</ul><br>

<h1>Comments</h1>
<% @comments.map do |comment| %>
<%= comment.content %><br>
<% end %>

<h3>Add a Comment!</h3>
<%= form_for ([@picture, @comment]) do |f| %>
<%= f.label :content, "Comment:" %>
<%= f.text_field :content %>
<%= f.submit %>
<% end %>
