<h1><%= "#{@picture.title}" %></h1>

<%= image_tag "#{@picture.image_url}" %>
<% if this_user == @picture.user %>
      <%= link_to "Delete", @picture, method: :delete %>
      <% end %>
<ul>
  <% @picture.tags.map do |tag| %>
  <li>#<%= tag.name %> </li>
  <% end %>
</ul><br>

<h1>Comments</h1>
<% @comments.map do |comment| %>
<%= comment.content %><br>
<% end %>

<h3>Add a Comment!</h3>
<%= form_for ([@picture, @comment]) do |f| %>
<%= f.label :content, "Comment:" %>
<%= f.text_field :content %>
<%= f.submit %>
<% end %>
